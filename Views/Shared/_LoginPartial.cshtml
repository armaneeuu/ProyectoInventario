@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="ObjetoDetection" asp-action="Index">Reconocer</a>
        </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Reconocimiento" asp-action="Index">Busqueda</a>
